	select MSM_SMP
	select HAVE_ARCH_HAS_CURRENT_TIMER
	bool

config  ARCH_MSM_CORTEXMP
	select MSM_SMP
	bool

config  MSM_KRAIT_WFE_FIXUP
	bool

config  ARCH_MSM_CORTEX_A5
	bool

